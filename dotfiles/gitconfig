[color]
  branch = auto
  diff = auto
  pager = true
  status = auto
  ui = true
[log]
  date = iso
[core]
  pager = less -+ -FRXS
  editor = vim
  trustctime = false
  filemode = false
  whitespace = cr-at-eol
  eof = native
  autocrlf = true
[push]
  default = matching
[credential]
  helper = cache --timeout=3600
[merge]
  tool = gvimdiff
[mergetool]
  keeptemporaries = false
  keepbackups = false
  prompt = false
  trustexitcode = false
[diff]
  tool = gvimdiff
[alias]
  last = log -1 --stat
  cp = cherry-pick
  co = checkout
  cl = clone
  ci = commit
  st = status -sb
  br = branch
  unstage = reset HEAD --
  dc = diff --cached
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
  pushup = push --set-upstream origin HEAD
  fetchap = fetch --all --prune
[pull]
  ff = only
