[user]
	name = Tyler Szabo
	email = tyler@szabomail.ca
[color]
	branch = auto
	diff = auto
	pager = true
	status = auto
	ui = true
[log]
	date = iso
[core]
	pager = less -+ -FRXS
	editor = vim
	trustctime = false
	filemode = false
	whitespace = cr-at-eol
	autocrlf = input
	quotepath = false
	commitGraph = true
	excludesfile = ~/.gitignore
	ignorecase = false
	eol = lf
[push]
	default = matching
[credential]
	helper = manager
[merge]
	tool = gvimdiff
[mergetool]
	keeptemporaries = false
	keepbackups = false
	prompt = false
	trustexitcode = false
[diff]
	tool = gvimdiff
	colorMoved = zebra
	colorMovedWS = allow-indentation-change
[alias]
	lg = log --graph --pretty=format:'%C(auto)%h%Creset%C(auto)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
	pushup = push --set-upstream origin HEAD
	fixup = commit --amend --reset-author --no-edit
	tidy = clean -xd -e .vs -e *.swp
	alias = config --get-regexp '^alias\\.'
	root-commits = rev-list --max-parents=0 --branches --remotes --tags
[pull]
	ff = only
[gc]
	writeCommitGraph = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
